<%= form_with(model: Transaction.new, url: transactions_path, method: :post, local: true) do |form| %>
  <div class="field">
    <%= form.label :recipient_id, 'Recipient' %>
    <%= form.collection_select :recipient_id, User.where.not(id: current_user.id), :id, :email, { include_blank: 'No users' } %>
  </div>

  <div class="field">
    <%= form.label :amount, 'Amount' %>
    <%= form.number_field :amount, step: 1 %>
  </div>

  <%= form.submit 'Send Money', class: 'btn btn-primary' %>
<% end %>
